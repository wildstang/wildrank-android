<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="label" format="string" />

    <declare-styleable name="ScoutingView">
        <attr name="label" />
        <attr name="key" format="string" />
    </declare-styleable>

    <declare-styleable name="ScoutingSpinnerView">
        <attr name="values" format="reference" />
        <attr name="editable" format="boolean" />
        <attr name="defaultValue" format="string" />
    </declare-styleable>

    <declare-styleable name="MatchDataView">
        <attr name="label" />
        <attr name="expression" format="string" />
        <attr name="explanation" format="string" />
        <attr name="format">
            <enum name="decimal" value="0" />
            <enum name="integer" value="1" />
            <enum name="percentage" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TemplatedTextView">
        <attr name="text" format="string" />
        <attr name="trueString" format="string" />
        <attr name="falseString" format="string" />
    </declare-styleable>
</resources>