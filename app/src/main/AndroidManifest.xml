<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wildstang.wildrank.androidv2" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.HomeActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AppSetupActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/title_activity_app_setup"
            android:screenOrientation="landscape" />

        <activity
            android:name=".activities.ScoutMatchActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/title_activity_scout_match" />

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
    </application>

</manifest>
